<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
       android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:textColor="#2E2A2A"
        />
    <TextView
        android:id="@+id/pole_text_view"
        android:textColorHint="@color/black"
        android:hint="0"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="40sp"
        android:textColor="#000000"
        />
    <LinearLayout
        android:id="@+id/button_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_clear"
                android:layout_margin="0.5dp"
                android:text="C"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
    />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_plus_and_minus"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="+/-"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_proc"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="%"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_div"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple__effect_gray"
               android:text="รท"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_seven"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_black"
                android:text="7"
                android:textColor="#FFFFFF">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_eight"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
               android:text="8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_nine"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
               android:text="9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_mylti"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple__effect_gray"
               android:text="ร"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_four"

                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_five"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_six"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_minus"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple__effect_gray"
               android:text="-"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_one"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_two"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_three"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_plus"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple__effect_gray"
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_point"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="."
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_zero"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_del"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="#FFFFFF"
                android:text="del"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_equals"
                android:layout_margin="0.5dp"
                android:background="@drawable/ripple_effect_yellow"
                android:text="="
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>